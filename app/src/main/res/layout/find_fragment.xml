<?xml version="1" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/header_panel_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ad_text_color"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@id/ll_find_container_id"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content">

            <RadioGroup
                android:id="@id/mRadioGroup"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@id/radiobtn_theme_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/discovery_leftbtn_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/discovery_theme"
                    android:textColor="@drawable/discovery_tab_textcolor_selector" />

                <RadioButton
                    android:id="@id/radiobtn_promotion_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/discovery_rightbtn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/discovery_strategy"
                    android:textColor="@drawable/discovery_tab_textcolor_selector" />
            </RadioGroup>
        </LinearLayout>

        <com.dwz1676.tujiaproject.view.IndicatorImageButton
            android:id="@id/right_menu_id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_actionbar_menu_black"
            app:corner_indicator_color="@color/actionbar_menu_indicator_color"
            app:corner_indicator_size="7dp" />
    </RelativeLayout>

    <View
        android:id="@id/header_bottom_shadow_id"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/discovery_viewpager_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@id/rl_vpitem"
    android:layout_width="121dp"
    android:layout_height="101dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_menu_order_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_menu_order" />

        <TextView
            android:id="@id/tv_indent_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@id/iv_menu_order_id"
            android:text="@string/indent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv__menu_message_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_menu_message" />

        <TextView
            android:id="@id/tv_message_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@id/iv__menu_message_id"
            android:text="@string/message"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
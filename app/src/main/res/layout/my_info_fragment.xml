<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        >
        <ImageView
            android:id="@+id/imageview_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_setting"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的途家"
           android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            />
        <ImageView
            android:id="@+id/imageview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/email_icon_2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:onClick="partfirst"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv1_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/icon_search_my_favor_2" />
        <ImageView
            android:id="@+id/iv2_id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv1_id"
            android:src="@mipmap/ic_user_header_2" />
        <ImageView
            android:id="@+id/iv3_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv2_id"
            android:src="@mipmap/manager_icon" />
        <Button
            android:id="@+id/login_button"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/iv2_id"
            android:layout_centerHorizontal="true"
            android:background="@drawable/repair_shape"
            android:text="登录或注册"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="parttwo"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textviewprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/icon_price_detailww"
                    android:text="待支付"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textviewcomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:drawableLeft="@mipmap/icon_menu_message"
                    android:text="待评价"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textviewcheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:drawableLeft="@mipmap/ic_surrounding_scenicsite"
                    android:text="待入住"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
            <!--条目-->
            <LinearLayout
                android:id="@+id/ll_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="partthree"
                android:layout_below="@+id/ll_id"
                android:orientation="vertical">
                <!--全部订单-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />

                <RelativeLayout
                    android:id="@+id/ralativlayout_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/profile_order_icon"
                        android:text="全部订单"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--积分-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />

                <RelativeLayout
                    android:id="@+id/ralativlayout_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/profile_score_icon"
                        android:text="积分"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--余额-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />

                <RelativeLayout
                    android:id="@+id/ralativlayout_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/profile_balance_icon"
                        android:text="余额"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--礼品卡-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />

                <RelativeLayout
                    android:id="@+id/ralativlayout_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/ic_profile_gift_card"
                        android:text="礼品卡"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--体验券-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />

                <RelativeLayout
                    android:id="@+id/ralativlayout_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/ic_profile_taste_card"
                        android:text="体验券"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--途游卡-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />

                <RelativeLayout
                    android:id="@+id/ralativlayout_prepay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/ic_profile_prepay_card"
                        android:text="途游卡"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--客服-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />

                <RelativeLayout
                    android:id="@+id/ralativlayout_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/profile_service_icon"
                        android:drawablePadding="10dp"
                        android:text="客服"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:text="400-188-1234"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--房屋-->
                <RelativeLayout
                    android:id="@+id/ralativlayout_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/ic_profile_open_hotel_3"
                        android:text="我要出租房屋"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--途立方-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />
                <RelativeLayout
                    android:id="@+id/ralativlayout_hotel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/ic_profile_open_hotel_3"
                        android:text="途立方"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
                <!--邀请好友拿返利-->
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aa000000" />
                <RelativeLayout
                    android:id="@+id/ralativlayout_hotel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/ic_profile_open_hotel_3"
                        android:text="邀请好友拿返利"
                        android:drawablePadding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        android:src="@mipmap/arrow_right_btn" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>